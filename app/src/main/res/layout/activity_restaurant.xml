<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.amandeepaujla.lab5_amandeep_jishnu.RestaurantActivity"
    android:weightSum="1">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorMultiSelectHighlight"
        android:paddingBottom="50px"
        android:paddingLeft="30px"
        android:paddingTop="50px"
        android:text="Select restaurant"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/listviewRest"
        android:layout_width="match_parent"
        android:layout_height="265dp" />


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/colorMultiSelectHighlight"
        android:onClick="PleaseOpen"
        android:text="View On Map"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnSatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/colorMultiSelectHighlight"
        android:onClick="viewSat"
        android:text="View on Satellite"
        android:textColor="@android:color/background_light" />

</LinearLayout>
